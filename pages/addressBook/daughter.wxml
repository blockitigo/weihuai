<view class="mail">
  <view class="top">

    <view class="left">
      <view>
        <image class="myhead-img" src="/images/face.png"></image>
      </view>
  
      <view class="friends1">
        <button class="sonbutton" bindtap="son" style="width: 150rpx; height: 200rpx; display: block; box-sizing: border-box; left: 0rpx; top: 0rpx">
          <image class="friends1-img" src="/images/friends4.png" style="position: relative; left: -53rpx; top: -3rpx"></image>
        </button>
        <text>儿子</text>
      </view>

      <view class="friends2">
        <button class="sonbutton" bindtap="daughter" style="width: 150rpx; height: 146rpx; display: block; box-sizing: border-box; left: 0rpx; top: 0rpx">
          <image class="friends2-img" src="/images/friends5.png" style="position: relative; left: -54rpx; top: -5rpx"></image>
        </button>
          <text style="font-weight: bold;">女儿</text>
      </view>

      <view class="friends3">
        <button class="sonbutton" bindtap="mother" style="width: 150rpx; height: 146rpx; display: block; box-sizing: border-box; left: 0rpx; top: 0rpx">
          <image class="friends3-img" src="/images/friends6.png" style="position: relative; left: -54rpx; top: -5rpx"></image>
        </button>
          <text>妈妈</text>
      </view>

      <view class="friends4">
        <button class="sonbutton" bindtap="father" style="width: 150rpx; height: 146rpx; display: block; box-sizing: border-box; left: 0rpx; top: 0rpx">
          <image class="friends4-img" src="/images/friends7.png" style="position: relative; left: -54rpx; top: -5rpx"></image>
        </button>
        <text>爸爸</text>
      </view>
   </view>

    <view class="right">

      <view class="thisfriends">

        <view>
          <text class="calendar-name">女儿</text>
        </view>

        <view class="calendar-button">
          <button bindtap="calendar" style="width: 120rpx; height: 73rpx; display: block; box-sizing: border-box; left: 331rpx; top: 0rpx; position: relative">
            <image class="calendar-img" src="/images/_我的.png"></image>
          </button>
        </view>

      </view>

      <view class="videos">
        <text class="message4" style="position: relative; left: 252rpx; top: 0rpx">杭州终于下雪啦！</text>
        <view class='imgList-li' wx:for='{{imgArr}}'>
          <image class='img' src='{{item}}' data-index='{{index}}' bindtap='previewImg' style="width: 296rpx; height: 225rpx; display: inline-block; box-sizing: border-box; position: relative; left: 228rpx; top: 0rpx"></image>
        </view>
      </view>

      <view class="time-position">
        <text class="time">2022年12月1日 9:30</text>
        <text class="position">杭州市-拱墅区-浙大城市学院</text>
      </view>

      
      <view class="message1">
        <navigator url="https://www.baidu.com" hover-class="navigator-hover" open-type="redirect">
          <image class="message1-img" src="/images/message1.png" ></image>
        </navigator>
        <!-- <web-view src="http://www.baidu.com/">
          <image class="message1-img" src="/images/message1.png" ></image>
        </web-view> -->
      </view>

      <view class="time-position">
        <text class="time">2022年12月1日 10:30</text>
        <text class="position">杭州市-拱墅区-浙大城市学院</text>
      </view>

      <view class="message2">
        <image class="message1-img" src="/images/OIP-C.png"></image>
      </view>

      <view class="time-position">
        <text class="trajectory">点击查看当天轨迹</text>
      </view>
    </view>

  </view>

  <view class="buttom"   style="width: 750rpx; display: block; box-sizing: border-box">
    <button class="bleft"  bindtap="goto2" style="width: 265rpx; height: 94rpx; display: block; box-sizing: border-box; left: -243rpx; top: 0rpx; position: relative">
    <image src="/images/Navigation1.png" style="position: relative; left: 0rpx; top: -19rpx; width: 100rpx; height: 100rpx"></image>
    </button>
    <button class="bright" style="width: 268rpx; height: 94rpx; display: block; box-sizing: border-box; left: 0rpx; top: -94rpx; position: relative">
      <image src="/images/4.png" style="position: relative; left: 0rpx; top: -19rpx; width: 100rpx; height: 100rpx"></image>
    </button>
    <button class="bright" bindtap="gotoMine" style="width: 268rpx; height: 94rpx; display: block; box-sizing: border-box; left: 268rpx; top: -188rpx; position: relative">
      <image src="/images/通讯录.png" style="position: relative; left: 0rpx; top: -19rpx; width: 100rpx; height: 100rpx"></image>
    </button>
  </view>
  
</view>



