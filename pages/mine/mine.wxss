/* pages/Mine/mine.wxss */

/* 背景颜色 */
page{
  background-color: rgb(240, 237, 237); /*  #e6e6e6灰色背景*/ 
  

}

.profile{
    background: linear-gradient( to bottom,  #FFFFE0	,white);  /*  柔和色*/ 
    height: 10vh;
    width: 100%;
    display: flex;
    align-items: center;
    background-color: white;
    height: 300rpx;
}

.thumbnail{
    width: 148rpx;
    height: 148rpx;

    border: 1rpx solid rgb(240, 237, 237);
    border: 16rpx;
    margin: 24rpx;
    flex-shrink: 0;
    /* 自动把元素压缩了，设为0就不压缩 */
}

.info{
    display: flex;
    flex-direction: column;
}

.qrcode{
    /* #可有可无 */
    width: 45rpx;
    height: 45rpx;

}

.name{
font-size: 36rpx;
font-weight: 700;
margin-bottom: 36rpx;

}

.detail{
display: flex;
flex-direction: row;
height: 45rpx;
line-height: 45rpx;
align-items: center;
}

.comment{
    flex-grow: 1;
    font-size: 22rpx;
    font-weight: 200;
    columns: #727272;
}




/* menu部分 */
.more{

    width: 48rpx;
    height: 48rpx;
    margin: 24rpx;
    color: #9b9b9b;
    font-weight: 700;

}
.item{
    display: flex;
    
    border-bottom: 1rpx solid #e6e6e6;
    align-items: center;
    background-color: white;

}

.icon{
    width: 48rpx;
    height: 48rpx;

    margin: 16rpx;
    border-radius: 6rpx;

}

.content{
    flex-grow: 1;
    margin-left: 16rpx;
    font-size: 24rpx;
    font-weight: 400;

}
/* 调试button大小用 */
.click-button {
    display: block;
    margin-top: 1vh;
    font-size: 3.5vh;
    width: 80vw
  }

.banner{
    height: 18rpx;
}

